{
  "compilerOptions": {
    "module": "ESNext",
    "esModuleInterop": true,
    "allowJs": false,
    "allowImportingTsExtensions": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noEmit": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": false,
    "outDir": "bin",
    "baseUrl": "."
  },
  "exclude": ["node_modules"]
}

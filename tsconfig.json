{
  "compilerOptions": {
    "module": "ESNext",
    "esModuleInterop": true,
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "target": "ESNext",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "outDir": "./bin",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@commands/*": ["commands/*"],
      "@lib/*": ["lib/*"],
      "@util/*": ["util/*"],
      "@extends/*": ["extends/*"]
    }
  }
  // "exclude": ["node_modules"]
}
